@model OzgurSeyhanWebSitesi.Core.Dtos.OzelDersDtos.CreateOzelDersDto

@{
    ViewData["Title"] = "Yeni Özel Ders Ekle";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">Yeni Özel Ders Ekle</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Admin">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "OzelDers")">Özel Dersler</a></li>
                <li class="breadcrumb-item active" aria-current="page">Yeni Ekle</li>
            </ol>
        </nav>
    </div>

    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Özel Ders Bilgileri</h4>
                    <p class="card-description">Lütfen tüm alanları eksiksiz doldurun</p>

                    <form asp-action="Create" method="post" class="forms-sample">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="KurSeviyesi">Kur Seviyesi</label>
                                    <input asp-for="KurSeviyesi" class="form-control" placeholder="Örn: A1, B2, İleri Seviye" />
                                    <span asp-validation-for="KurSeviyesi" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="HaftalikSaat">Haftalık Saat</label>
                                    <input asp-for="HaftalikSaat" type="number" class="form-control" placeholder="Örn: 4" />
                                    <span asp-validation-for="HaftalikSaat" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="MaksimumOgrenciSayisi">Maksimum Öğrenci Sayısı</label>
                                    <input asp-for="MaksimumOgrenciSayisi" type="number" class="form-control" placeholder="Örn: 8" />
                                    <span asp-validation-for="MaksimumOgrenciSayisi" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Gunler">Günler</label>
                                    <input asp-for="Gunler" class="form-control" placeholder="Örn: Pazartesi, Çarşamba, Cuma" />
                                    <span asp-validation-for="Gunler" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="SaatAraligi">Saat Aralığı</label>
                                    <input asp-for="SaatAraligi" class="form-control" placeholder="Örn: 10:00 - 12:00" />
                                    <span asp-validation-for="SaatAraligi" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Aciklama">Açıklama</label>
                            <textarea asp-for="Aciklama" class="form-control" rows="4" 
                                      placeholder="Özel ders hakkında detaylı açıklama..."></textarea>
                            <span asp-validation-for="Aciklama" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary mr-2">
                                <i class="mdi mdi-content-save"></i> Kaydet
                            </button>
                            <a href="@Url.Action("Index", "OzelDers")" class="btn btn-light">
                                <i class="mdi mdi-cancel"></i> İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
