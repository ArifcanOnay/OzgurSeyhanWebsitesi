@model List<OzgurSeyhanWebSitesi.Core.Dtos.OzelDersDtos.OzelDersDto>

@{
    ViewData["Title"] = "Özel Ders Yönetimi";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">Özel Ders Yönetimi</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Admin">Dashboard</a></li>
                <li class="breadcrumb-item active" aria-current="page">Özel Dersler</li>
            </ol>
        </nav>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Başarılı!</strong> @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Hata!</strong> @TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="card-title mb-0">Özel Ders Listesi</h4>
                        <a href="@Url.Action("Create", "OzelDers")" class="btn btn-primary btn-sm">
                            <i class="mdi mdi-plus"></i> Yeni Özel Ders Ekle
                        </a>
                    </div>

                    @if (Model == null || !Model.Any())
                    {
                        <div class="alert alert-info" role="alert">
                            <i class="mdi mdi-information"></i> Henüz özel ders eklenmemiş.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Kur Seviyesi</th>
                                        <th>Haftalık Saat</th>
                                        <th>Max Öğrenci</th>
                                        <th>Günler</th>
                                        <th>Saat Aralığı</th>
                                        <th>Öğretmen</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>
                                                <span class="badge badge-info">@item.KurSeviyesi</span>
                                            </td>
                                            <td>@item.HaftalikSaat saat</td>
                                            <td>@item.MaksimumOgrenciSayisi kişi</td>
                                            <td>@item.Gunler</td>
                                            <td>@item.SaatAraligi</td>
                                            <td>
                                                @if (item.OgretmenId > 0)
                                                {
                                                    <span class="badge badge-success">Öğretmen #@item.OgretmenId</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-warning">Atanmamış</span>
                                                }
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Edit", "OzelDers", new { id = item.Id })" 
                                                   class="btn btn-sm btn-warning" title="Düzenle">
                                                    <i class="mdi mdi-pencil"></i> Düzenle
                                                </a>
                                                <button onclick="deleteOzelDers(@item.Id)" 
                                                        class="btn btn-sm btn-danger" title="Sil">
                                                    <i class="mdi mdi-delete"></i> Sil
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteOzelDers(id) {
            if (confirm('Bu özel dersi silmek istediğinize emin misiniz?')) {
                var form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("Delete", "OzelDers")';

                var input = document.createElement('input');
                input.type = 'hidden';
                input.name = 'id';
                input.value = id;
                form.appendChild(input);

                document.body.appendChild(form);
                form.submit();
            }
        }
    </script>
}
