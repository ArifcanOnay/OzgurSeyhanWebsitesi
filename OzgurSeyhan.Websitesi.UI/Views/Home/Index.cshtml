<body>
    <!-- User Navigation Bar -->
    <nav class="user-navbar">
        <div class="container">
            <a href="/" class="brand">
                <i class="fas fa-graduation-cap me-2"></i>Özgür Seyhan
            </a>
            
            <div class="user-nav-items">
                <div id="userNavContent">
                    <!-- JavaScript ile doldurulacak -->
                    <a href="/Home/Login" class="btn-nav btn-login">
                        <i class="fas fa-sign-in-alt"></i>Giriş Yap
                    </a>
                    <a href="/Home/Register" class="btn-nav btn-register">
                        <i class="fas fa-user-plus"></i>Kayıt Ol
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <section class="hero-section">
        <div class="container">
            <!-- Hero Başlık ve Resim -->
            <div class="row align-items-center mb-5">
                <div class="col-lg-6 mb-4 mb-lg-0">
                    <h1 class="hero-title">Özgür Seyhan</h1>
                    <p class="hero-subtitle">İngilizce Eğitim Uzmanı & Yaşam Koçu</p>
                    <p class="hero-description">
                        10 yılı aşkın deneyimimle, İngilizcenizi bir sonraki seviyeye taşıyorum. 
                        Dünya çapında binlerce öğrenciye İngilizce öğretmenin keyfini yaşadım.
                    </p>
                    <a href="#about" class="btn-primary-custom">
                        <i class="fas fa-user me-2"></i>Hakkımda
                    </a>
                </div>
                <div class="col-lg-6 text-center">
                    <img src="~/Ready-Bootstrap-Dashboard-master/assets/img/Özgür Hoca resim.jpg" 
                         alt="Özgür Seyhan" class="hero-image">
                </div>
            </div>

            <!-- Hakkımda Bölümü -->
            <div id="about">
                <h2 class="section-title">Hakkımda</h2>
                <div class="row mb-4">
                    <div class="col-lg-4 col-md-6 mb-3">
                        <div class="info-card">
                            <div class="info-icon"><i class="fas fa-graduation-cap"></i></div>
                            <h5>Eğitim Geçmişi</h5>
                            <p><strong>Yıldız Teknik Üniversitesi</strong> Kimya Mühendisliği mezunu. 40 yaşında, eğitime tutkuyla bağlı.</p>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 mb-3">
                        <div class="info-card">
                            <div class="info-icon"><i class="fas fa-globe"></i></div>
                            <h5>Uluslararası Deneyim</h5>
                            <p><strong>Çin'de 5 yıl</strong> binlerce Çinli öğrenciye İngilizce eğitimi verdim.</p>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 mb-3">
                        <div class="info-card">
                            <div class="info-icon"><i class="fas fa-heart"></i></div>
                            <h5>Türkiye'ye Adanmış</h5>
                            <p>Türk öğrencilerime kaliteli İngilizce eğitimi sunuyorum.</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Profesyonel Yolculuk -->
            <div>
                <h2 class="section-title">Profesyonel Yolculuğum</h2>
                <div class="row mb-4">
                    <div class="col-lg-6 mb-3">
                        <div class="timeline-card">
                            <div class="timeline-year">2015 - 2020</div>
                            <div class="timeline-title">İngilizce Eğitmeni - Çin</div>
                            <p class="timeline-desc">Çin'de binlerce öğrenciye İngilizce öğrettim. Farklı kültürlerle çalışma deneyimi kazandım.</p>
                        </div>
                    </div>
                    <div class="col-lg-6 mb-3">
                        <div class="timeline-card">
                            <div class="timeline-year">2020 - Günümüz</div>
                            <div class="timeline-title">Özgür Seyhan Akademi</div>
                            <p class="timeline-desc">Türkiye'de özel eğitim programları sunuyorum. Online ve yüz yüze dersler veriyorum.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- YouTube Videolarım Bölümü -->
    <section class="youtube-section">
        <div class="container">
            <h2 class="youtube-section-title"><i class="fab fa-youtube me-2"></i>YouTube Videolarım</h2>
            <div class="row g-4" id="playlistContainer">
                    @if(Model != null && Model.Any())
                    {
                        foreach(var playlist in Model)
                        {
                            var firstVideo = playlist.Videos.FirstOrDefault();
                            var thumbnailUrl = firstVideo != null ? $"https://img.youtube.com/vi/{firstVideo.VideoId}/maxresdefault.jpg" : "https://via.placeholder.com/400x200?text=Playlist";
                            <div class="col-lg-4 col-md-6">
                                @if (!string.IsNullOrEmpty(playlist.KategoriBaslik))
                                {
                                    <div class="category-header">
                                        <i class="fas fa-folder-open"></i>
                                        @playlist.KategoriBaslik
                                    </div>
                                }
                                <div class="playlist-card" onclick="openPlaylist(@playlist.Id, '@Html.Raw(playlist.Baslik.Replace("'", "\\'"))')">
                                    <img src="@thumbnailUrl" alt="@playlist.Baslik" class="playlist-thumbnail">
                                    <div class="playlist-body">
                                        <h5 class="playlist-title">@playlist.Baslik</h5>
                                        <p class="playlist-description">@(playlist.Aciklama ?? "İngilizce eğitim videoları")</p>
                                        <div class="playlist-meta">
                                            <span class="playlist-video-count">
                                                <i class="fas fa-play-circle"></i>
                                                <span>@playlist.Videos.Count Video</span>
                                            </span>
                                            <button class="btn btn-watch-playlist" onclick="event.stopPropagation(); openPlaylist(@playlist.Id, '@Html.Raw(playlist.Baslik.Replace("'", "\\'"))')">
                                                <i class="fas fa-play me-1"></i> İzle
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-12 text-center">
                            <div class="playlist-card" style="padding: 60px 20px; cursor: default;">
                                <i class="fab fa-youtube fa-4x mb-3" style="opacity: 0.6;"></i>
                                <h4 style="margin-bottom: 10px;">Yakında YouTube Videolarım Burada Olacak!</h4>
                                <p style="font-size: 1rem; margin: 0; opacity: 0.9;">Admin panelinden playlist ekleyerek videolarınızı paylaşabilirsiniz.</p>
                            </div>
                        </div>
                    }
                </div>
        </div>
    </section>

    <!-- İngilizce Konuşmanı Artıracak Tüyolar Bölümü -->
    <section class="tuyolar-section">
        <div class="container">
            <h2 class="tuyolar-section-title">
                <i class="fas fa-lightbulb me-2"></i>İngilizce Konuşmanı Artıracak Tüyolar
            </h2>
            <p class="tuyolar-subtitle">
                Pratik ipuçları ve etkili tekniklerle İngilizce konuşma becerilerini geliştir
            </p>
            
            <div class="row g-4" id="tuyolarContainer">
                @if(ViewBag.IngilizceKonusmaTuyolari != null && ViewBag.IngilizceKonusmaTuyolari.Count > 0)
                {
                    foreach(var video in ViewBag.IngilizceKonusmaTuyolari)
                    {
                        <div class="col-lg-4 col-md-6">
                            @if (!string.IsNullOrEmpty(video.KategoriBaslik))
                            {
                                <div class="category-header" style="background: linear-gradient(135deg, #ff6f00 0%, #ff9800 100%); border-left-color: #f57c00;">
                                    <i class="fas fa-tag"></i>
                                    @video.KategoriBaslik
                                </div>
                            }
                            <div class="tuyolar-card" onclick="openSingleVideo('@video.VideoId', '@Html.Raw(video.Baslik.Replace("'", "\\'"))')">
                                <div class="tuyolar-thumbnail-container">
                                    <img src="https://img.youtube.com/vi/@video.VideoId/maxresdefault.jpg" 
                                         alt="@video.Baslik" 
                                         class="tuyolar-thumbnail">
                                    <div class="tuyolar-play-overlay">
                                        <i class="fas fa-play"></i>
                                    </div>
                                </div>
                                <div class="tuyolar-body">
                                    <span class="tuyolar-badge">
                                        <i class="fas fa-star me-1"></i> Pratik Tüyo
                                    </span>
                                    <h5 class="tuyolar-title">@video.Baslik</h5>
                                    <button class="btn tuyolar-watch-btn" onclick="event.stopPropagation(); openSingleVideo('@video.VideoId', '@Html.Raw(video.Baslik.Replace("'", "\\'"))')">
                                        <i class="fas fa-play-circle me-2"></i> İzle
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center">
                        <div class="tuyolar-card" style="padding: 60px 20px; cursor: default;">
                            <i class="fas fa-lightbulb fa-4x mb-3" style="opacity: 0.6; color: #f57c00;"></i>
                            <h4 style="margin-bottom: 10px; color: #e65100;">Yakında Pratik Tüyolar Burada Olacak!</h4>
                            <p style="font-size: 1rem; margin: 0; opacity: 0.9; color: #e65100;">
                                Admin panelinden "İngilizce Konuşma Tüyoları" kategorisinden video ekleyerek paylaşabilirsiniz.
                            </p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

