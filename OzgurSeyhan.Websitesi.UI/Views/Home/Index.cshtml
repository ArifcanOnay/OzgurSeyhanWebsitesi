@model List<OzgurSeyhanWebSitesi.Core.Dtos.PlaylistDtos.PlaylistWithVideosDto>

@{
    ViewData["Title"] = "Özgür Seyhan - İngilizce Eğitim Uzmanı";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { font-family: 'Poppins', sans-serif; overflow-x: hidden; }
        
        .hero-section {
            min-height: auto;
            background: linear-gradient(135deg, #0f0c29 0%, #302b63 50%, #24243e 100%);
            padding: 60px 0 80px 0;
            color: white;
            position: relative;
            overflow: hidden;
        }
        
        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: 
                radial-gradient(circle at 20% 50%, rgba(138, 43, 226, 0.2) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(0, 191, 255, 0.2) 0%, transparent 50%);
            animation: gradientShift 15s ease infinite;
        }
        
        @@keyframes gradientShift {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.8; }
        }
        
        .hero-section > .container {
            position: relative;
            z-index: 1;
        }
        
        .youtube-section {
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
            padding: 80px 0;
            color: white;
            position: relative;
            overflow: hidden;
        }
        
        .youtube-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: 
                radial-gradient(circle at 30% 20%, rgba(230, 57, 70, 0.15) 0%, transparent 50%),
                radial-gradient(circle at 70% 80%, rgba(41, 128, 185, 0.15) 0%, transparent 50%);
        }
        
        .youtube-section > .container {
            position: relative;
            z-index: 1;
        }
        
        .hero-title { font-size: 3.5rem; font-weight: 800; margin-bottom: 1rem; }
        .hero-subtitle { font-size: 1.3rem; font-weight: 300; margin-bottom: 1.5rem; }
        .hero-description { font-size: 1rem; margin-bottom: 2rem; opacity: 0.95; }
        
        .hero-image {
            width: 380px;
            height: 380px;
            border-radius: 50%;
            object-fit: cover;
            border: 8px solid rgba(255, 255, 255, 0.3);
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4), 0 0 0 20px rgba(255, 255, 255, 0.1);
            animation: float 6s ease-in-out infinite;
        }
        
        @@keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-20px); }
        }
        
        .btn-primary-custom {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 12px 30px;
            border-radius: 50px;
            font-weight: 600;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
            font-size: 0.95rem;
            box-shadow: 0 10px 25px rgba(245, 87, 108, 0.3);
        }
        
        .btn-primary-custom:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 35px rgba(245, 87, 108, 0.4);
            color: white;
        }
        
        .section-title { 
            font-size: 2rem; 
            font-weight: 700; 
            margin-bottom: 2rem; 
            color: white; 
            text-align: center;
            margin-top: 3rem;
        }
        
        .youtube-section-title {
            font-size: 2.5rem; 
            font-weight: 700; 
            margin-bottom: 3rem; 
            color: white; 
            text-align: center;
        }
        
        .info-card {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 30px;
            margin-bottom: 20px;
            border: 2px solid rgba(255, 255, 255, 0.2);
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            position: relative;
            overflow: hidden;
        }
        
        .info-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s;
        }
        
        .info-card:hover::before {
            left: 100%;
        }
        
        .info-card:hover { 
            transform: translateY(-10px) scale(1.02); 
            background: rgba(255, 255, 255, 0.25);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
            border-color: rgba(255, 255, 255, 0.4);
        }
        
        .info-icon {
            font-size: 2.5rem;
            margin-bottom: 15px;
            background: linear-gradient(135deg, #667eea 0%, #00bfff 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            filter: drop-shadow(0 2px 4px rgba(0,0,0,0.2));
        }
        
        .info-card h5 {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 10px;
        }
        
        .info-card p {
            font-size: 0.9rem;
            margin: 0;
            opacity: 0.95;
        }
        
        .timeline-card {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 25px;
            margin-bottom: 15px;
            border-left: 5px solid;
            border-image: linear-gradient(135deg, #f093fb 0%, #f5576c 100%) 1;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            position: relative;
            overflow: hidden;
        }
        
        .timeline-card::after {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
            transition: all 0.5s;
            opacity: 0;
        }
        
        .timeline-card:hover::after {
            opacity: 1;
        }
        
        .timeline-card:hover { 
            transform: translateX(15px) scale(1.02); 
            background: rgba(255, 255, 255, 0.25);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
        }
        
        .timeline-year { 
            font-size: 1.3rem; 
            font-weight: 700; 
            margin-bottom: 5px;
        }
        
        .timeline-title { 
            font-size: 1.1rem; 
            font-weight: 600; 
            margin-bottom: 8px;
        }
        
        .timeline-desc { 
            font-size: 0.9rem; 
            opacity: 0.95;
            margin: 0;
        }
        
        .youtube-section-title {
            font-size: 2.8rem; 
            font-weight: 800; 
            margin-bottom: 3rem; 
            color: white; 
            text-align: center;
            text-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
            position: relative;
            display: inline-block;
            width: 100%;
        }
        
        .youtube-section-title i {
            background: linear-gradient(135deg, #ff0000 0%, #ff6b6b 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            animation: pulse 2s ease-in-out infinite;
        }
        
        @@keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.1); }
        }
        
        .playlist-card {
            background: rgba(255, 255, 255, 0.08);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            overflow: hidden;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            border: 2px solid rgba(255, 255, 255, 0.1);
            cursor: pointer;
            position: relative;
            margin-top: 0;
        }
        
        .category-header {
            background: rgba(255, 255, 255, 0.95);
            color: #1a1a2e;
            padding: 15px 25px;
            font-weight: 700;
            font-size: 1.1rem;
            text-align: center;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
            border-radius: 15px;
            margin-bottom: 25px;
            border: 3px solid rgba(255, 255, 255, 0.3);
            backdrop-filter: blur(10px);
            position: relative;
            overflow: hidden;
        }
        
        .category-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(102, 126, 234, 0.2), transparent);
            transition: left 0.6s;
        }
        
        .category-header:hover::before {
            left: 100%;
        }
        
        .category-header i {
            margin-right: 10px;
            color: #667eea;
            font-size: 1.2rem;
        }
        
        .playlist-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, rgba(230, 57, 70, 0.1) 0%, rgba(41, 128, 185, 0.1) 100%);
            opacity: 0;
            transition: opacity 0.4s;
        }
        
        .playlist-card:hover::before {
            opacity: 1;
        }
        
        .playlist-card:hover { 
            transform: translateY(-15px) scale(1.03); 
            background: rgba(255, 255, 255, 0.15);
            box-shadow: 0 25px 60px rgba(230, 57, 70, 0.4);
            border-color: rgba(230, 57, 70, 0.5);
        }
        
        .playlist-thumbnail {
            width: 100%;
            height: 220px;
            object-fit: cover;
            border-bottom: 3px solid rgba(230, 57, 70, 0.5);
            transition: transform 0.4s;
        }
        
        .playlist-card:hover .playlist-thumbnail {
            transform: scale(1.1);
        }
        
        .playlist-body {
            padding: 25px;
            position: relative;
            z-index: 1;
        }
        
        .playlist-title {
            font-size: 1.2rem;
            font-weight: 700;
            margin-bottom: 12px;
            color: white;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-shadow: 0 2px 4px rgba(0,0,0,0.2);
        }
        
        .playlist-description {
            font-size: 0.85rem;
            opacity: 0.9;
            margin-bottom: 15px;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
        
        .playlist-meta {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 0.85rem;
            opacity: 0.9;
        }
        
        .playlist-video-count {
            display: flex;
            align-items: center;
            gap: 5px;
            font-size: 0.95rem;
            color: rgba(255, 255, 255, 0.9);
            font-weight: 500;
        }
        
        .playlist-video-count i {
            color: #ff6b6b;
        }
        
        .btn-watch-playlist {
            background: linear-gradient(135deg, #e63946 0%, #ff6b6b 100%);
            color: white;
            border: none;
            padding: 10px 25px;
            border-radius: 30px;
            font-size: 0.9rem;
            font-weight: 700;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            box-shadow: 0 5px 15px rgba(230, 57, 70, 0.3);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .btn-watch-playlist:hover {
            background: linear-gradient(135deg, #ff6b6b 0%, #e63946 100%);
            color: white;
            transform: translateY(-3px) scale(1.08);
            box-shadow: 0 15px 35px rgba(230, 57, 70, 0.6);
        }
        
        /* İngilizce Konuşma Tüyoları Section */
        .tuyolar-section {
            padding: 100px 0;
            background: linear-gradient(135deg, #fff3e0 0%, #ffe0b2 50%, #ffcc80 100%);
            position: relative;
            overflow: hidden;
        }
        
        .tuyolar-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: 
                radial-gradient(circle at 20% 50%, rgba(255, 152, 0, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(255, 193, 7, 0.1) 0%, transparent 50%);
        }
        
        .tuyolar-section > .container {
            position: relative;
            z-index: 1;
        }
        
        .tuyolar-section-title {
            font-size: 2.8rem;
            font-weight: 800;
            margin-bottom: 1rem;
            background: linear-gradient(135deg, #f57c00 0%, #ff9800 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-align: center;
            text-shadow: 0 4px 15px rgba(245, 124, 0, 0.2);
            position: relative;
        }
        
        .tuyolar-section-title i {
            color: #f57c00;
            -webkit-text-fill-color: #f57c00;
            animation: pulse 2s ease-in-out infinite;
            filter: drop-shadow(0 0 10px rgba(245, 124, 0, 0.5));
        }
        
        .tuyolar-subtitle {
            text-align: center;
            font-size: 1.2rem;
            color: #e65100;
            margin-bottom: 3rem;
            font-weight: 400;
        }
        
        .tuyolar-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 25px;
            overflow: hidden;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            border: 3px solid rgba(245, 124, 0, 0.2);
            cursor: pointer;
            position: relative;
            box-shadow: 0 10px 40px rgba(245, 124, 0, 0.15);
        }
        
        .tuyolar-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, rgba(255, 152, 0, 0.08) 0%, rgba(255, 193, 7, 0.08) 100%);
            opacity: 0;
            transition: opacity 0.4s;
        }
        
        .tuyolar-card:hover::before {
            opacity: 1;
        }
        
        .tuyolar-card:hover {
            transform: translateY(-15px) scale(1.03);
            background: rgba(255, 255, 255, 1);
            box-shadow: 0 25px 60px rgba(245, 124, 0, 0.3);
            border-color: rgba(245, 124, 0, 0.5);
        }
        
        .tuyolar-thumbnail-container {
            position: relative;
            overflow: hidden;
            height: 250px;
        }
        
        .tuyolar-thumbnail {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.4s;
        }
        
        .tuyolar-card:hover .tuyolar-thumbnail {
            transform: scale(1.1);
        }
        
        .tuyolar-play-overlay {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 80px;
            height: 80px;
            background: rgba(245, 124, 0, 0.9);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s;
            box-shadow: 0 5px 20px rgba(245, 124, 0, 0.5);
        }
        
        .tuyolar-play-overlay i {
            color: white;
            font-size: 2rem;
            margin-left: 5px;
        }
        
        .tuyolar-card:hover .tuyolar-play-overlay {
            transform: translate(-50%, -50%) scale(1.2);
            background: rgba(255, 152, 0, 0.95);
        }
        
        .tuyolar-body {
            padding: 25px;
            position: relative;
            z-index: 1;
        }
        
        .tuyolar-badge {
            background: linear-gradient(135deg, #f57c00 0%, #ff9800 100%);
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            display: inline-block;
            margin-bottom: 15px;
            box-shadow: 0 2px 10px rgba(245, 124, 0, 0.3);
        }
        
        .tuyolar-title {
            font-size: 1.2rem;
            font-weight: 700;
            margin-bottom: 15px;
            color: #e65100;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            line-height: 1.4;
        }
        
        .tuyolar-watch-btn {
            background: linear-gradient(135deg, #f57c00 0%, #ff9800 100%);
            color: white;
            border: none;
            padding: 12px 30px;
            border-radius: 30px;
            font-size: 0.95rem;
            font-weight: 700;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            box-shadow: 0 5px 15px rgba(245, 124, 0, 0.3);
            width: 100%;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .tuyolar-watch-btn:hover {
            background: linear-gradient(135deg, #ff9800 0%, #f57c00 100%);
            color: white;
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(245, 124, 0, 0.5);
        }
        
