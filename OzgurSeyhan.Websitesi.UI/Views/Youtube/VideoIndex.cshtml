@model List<OzgurSeyhanWebSitesi.Core.Dtos.YoutubeVideoDtos.YoutubeVideoDto>

@{
    ViewData["Title"] = "Video Yönetimi";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Video Yönetimi</h4>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Başarılı!</strong> @TempData["SuccessMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Hata!</strong> @TempData["ErrorMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h4 class="card-title">Video Listesi</h4>
                            <a href="@Url.Action("VideoCreate", "Youtube")" class="btn btn-primary">
                                <i class="la la-plus"></i> Yeni Video Ekle
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th style="width: 120px;">Thumbnail</th>
                                        <th>Başlık</th>
                                        <th>Video ID</th>
                                        <th>Öğretmen ID</th>
                                        <th class="text-center">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        @foreach (var video in Model)
                                        {
                                            <tr>
                                                <td>@video.Id</td>
                                                <td>
                                                    <img src="https://img.youtube.com/vi/@video.VideoId/default.jpg" 
                                                         alt="@video.Baslik" 
                                                         class="img-thumbnail" 
                                                         style="width: 100px;">
                                                </td>
                                                <td>
                                                    <strong>@video.Baslik</strong>
                                                </td>
                                                <td><code>@video.VideoId</code></td>
                                                <td>@video.OgretmenId</td>
                                                <td class="text-center">
                                                    <a href="@video.Url" 
                                                       target="_blank" 
                                                       class="btn btn-info btn-sm" 
                                                       title="YouTube'da İzle">
                                                        <i class="la la-play"></i>
                                                    </a>
                                                    <a href="@Url.Action("VideoEdit", "Youtube", new { id = video.Id })" 
                                                       class="btn btn-warning btn-sm" 
                                                       title="Düzenle">
                                                        <i class="la la-edit"></i>
                                                    </a>
                                                    <form method="post" 
                                                          action="@Url.Action("VideoDelete", "Youtube", new { id = video.Id })" 
                                                          style="display:inline;"
                                                          onsubmit="return confirm('Bu videoyu silmek istediğinizden emin misiniz?');">
                                                        <button type="submit" class="btn btn-danger btn-sm" title="Sil">
                                                            <i class="la la-trash"></i>
                                                        </button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="6" class="text-center">Henüz video eklenmemiş.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
