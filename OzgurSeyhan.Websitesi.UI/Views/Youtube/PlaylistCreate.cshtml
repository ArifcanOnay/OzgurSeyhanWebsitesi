@model OzgurSeyhan.Websitesi.UI.Models.CreatePlaylistViewModel

@{
    ViewData["Title"] = "Playlist Ekle";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Yeni Playlist Ekle</h4>

        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">YouTube Playlist URL'si ile Ekle</h4>
                    </div>
                    <div class="card-body">
                        <form method="post" action="@Url.Action("PlaylistCreate", "Youtube")" asp-antiforgery="true">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            
                            <div class="form-group">
                                <label asp-for="PlaylistUrl">YouTube Playlist URL</label>
                                <input asp-for="PlaylistUrl" 
                                       class="form-control" 
                                       placeholder="https://www.youtube.com/playlist?list=PLxxxxxx" 
                                       required>
                                <span asp-validation-for="PlaylistUrl" class="text-danger"></span>
                                <small class="form-text text-muted">
                                    YouTube playlist URL'sini buraya yapıştırın. Tüm videolar otomatik olarak çekilecektir.
                                </small>
                            </div>

                            <div class="form-group">
                                <label asp-for="KategoriBaslik">Kategori Başlığı <span class="text-muted">(Opsiyonel)</span></label>
                                <input asp-for="KategoriBaslik" 
                                       class="form-control" 
                                       placeholder="Örn: Beş dakikada İngilizce geliştirmek ister misin?" 
                                       maxlength="200">
                                <span asp-validation-for="KategoriBaslik" class="text-danger"></span>
                                <small class="form-text text-muted">
                                    Ana sayfada playlist kartının üstünde görünecek özel başlık. Boş bırakılabilir.
                                </small>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-success">
                                    <i class="la la-save"></i> Playlist Ekle
                                </button>
                                <a href="@Url.Action("PlaylistIndex", "Youtube")" class="btn btn-secondary">
                                    <i class="la la-times"></i> İptal
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card card-info">
                    <div class="card-body">
                        <h5><i class="la la-info-circle"></i> Nasıl Kullanılır?</h5>
                        <ol>
                            <li>YouTube'da playlist sayfasına gidin</li>
                            <li>Tarayıcı adres çubuğundan URL'yi kopyalayın</li>
                            <li>URL'nin içinde "list=" parametresi olduğundan emin olun</li>
                            <li>Buraya yapıştırıp "Playlist Ekle" butonuna tıklayın</li>
                        </ol>
                        <hr>
                        <p><strong>Örnek URL:</strong></p>
                        <code style="word-break: break-all;">
                            https://www.youtube.com/playlist?list=PLrAXtmErZgOeiKm4sgNOknGvNjby9efdf
                        </code>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
