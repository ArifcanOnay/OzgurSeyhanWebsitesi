@model List<OzgurSeyhanWebSitesi.Core.Dtos.PodcastDtos.PodcastDto>

@{
    ViewData["Title"] = "Podcast Yönetimi";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Podcast Yönetimi</h4>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Başarılı!</strong> @TempData["SuccessMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Hata!</strong> @TempData["ErrorMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h4 class="card-title">Podcast Listesi</h4>
                            <a href="@Url.Action("PodcastCreate", "Youtube")" class="btn btn-primary">
                                <i class="la la-plus"></i> Yeni Podcast Ekle
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Başlık</th>
                                        <th>Spotify URL</th>
                                        <th>Öğretmen ID</th>
                                        <th class="text-center" style="width: 250px;">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        @foreach (var podcast in Model)
                                        {
                                            <tr>
                                                <td>@podcast.Id</td>
                                                <td>
                                                    <strong>@podcast.Baslik</strong>
                                                </td>
                                                <td>
                                                    <a href="@podcast.PodcastUrl" target="_blank" class="text-primary">
                                                        <i class="la la-external-link"></i> Spotify'da Aç
                                                    </a>
                                                </td>
                                                <td>@podcast.OgretmenId</td>
                                                <td class="text-center">
                                                    <a href="@Url.Action("PodcastEdit", "Youtube", new { id = podcast.Id })" 
                                                       class="btn btn-warning btn-sm" 
                                                       title="Düzenle">
                                                        <i class="la la-edit"></i> Düzenle
                                                    </a>
                                                    <form method="post" 
                                                          action="@Url.Action("PodcastDelete", "Youtube", new { id = podcast.Id })" 
                                                          style="display:inline;"
                                                          onsubmit="return confirm('Bu podcast\'i silmek istediğinizden emin misiniz?');">
                                                        <button type="submit" class="btn btn-danger btn-sm" title="Sil">
                                                            <i class="la la-trash"></i> Sil
                                                        </button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="5" class="text-center text-muted">
                                                <i class="la la-podcast" style="font-size: 48px; opacity: 0.3;"></i>
                                                <p>Henüz podcast eklenmemiş. Yeni bir podcast eklemek için yukarıdaki butona tıklayın.</p>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
