@model KursDetayViewModel

<div class="container-fluid py-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center text-white mb-5">
                <h1 class="display-4 fw-bold">@Model.Kurs.KursAdi</h1>
                <p class="lead">@Model.Kurs.Aciklama</p>
            </div>
        </div>

        <div class="row g-4">
            <!-- Kurs bilgileri -->
            <div class="col-lg-6">
                <div class="card h-100 shadow-lg border-0">
                    <div class="card-header bg-success text-white">
                        <h4 class="mb-0">📚 Kurs Detayları</h4>
                    </div>
                    <div class="card-body p-4">

                        <!-- Fiyat -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="d-flex align-items-center justify-content-between">
                                    <span class="h5 mb-0">Aylık Ücret:</span>
                                    <span class="h4 text-success">@Model.Kurs.YeniFiyat ₺</span>
                                </div>
                            </div>
                        </div>

                        <!-- Program Bilgileri -->
                        <div class="row mb-3">
                            <div class="col-6">
                                <small class="text-muted">Kurs Süresi</small>
                                <div class="fw-bold">@Model.Kurs.KursSuresiHafta hafta</div>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">Haftalık Ders</small>
                                <div class="fw-bold">@Model.Kurs.HaftalikDersSayisi gün</div>
                            </div>
                        </div>

                        <!-- Ders Günleri -->
                        <div class="row mb-3">
                            <div class="col-12">
                                <small class="text-muted">Ders Günleri</small>
                                <div class="fw-bold">@Model.Kurs.DersGunleri</div>
                            </div>
                        </div>

                        <!-- Konular -->
                        <div class="row mb-3">
                            <div class="col-12">
                                <h6 class="mb-2 text-success">📖 İşlenecek Konular:</h6>
                                <p class="mb-0">@Model.Kurs.Konular</p>
                            </div>
                        </div>

                        <!-- Beklenen Seviye -->
                        <div class="row">
                            <div class="col-12">
                                <h6 class="mb-2 text-success">🎯 Kurs Sonunda:</h6>
                                <p class="mb-0">@Model.Kurs.BeklenenSeviye</p>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <!-- Video -->
            <div class="col-lg-6">
                <div class="card h-100 shadow-lg border-0">
                    <div class="card-header bg-dark text-white">
                        <h4 class="mb-0">🎥 Örnek Ders Videosu</h4>
                    </div>
                    <div class="card-body p-0">
                        @if (Model.VideoVarMi)
                        {
                            <video class="w-100" controls style="max-height: 400px;">
                                <source src="@Model.OrnekVideoPath" type="video/mp4">
                                Tarayıcınız video desteklemiyor.
                            </video>
                        }
                        else
                        {
                            <div class="p-5 text-center text-muted">
                                <i class="fas fa-video fa-3x mb-3"></i>
                                <p>Örnek video yakında eklenecek...</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>