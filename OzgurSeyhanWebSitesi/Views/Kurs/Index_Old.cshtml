@model IEnumerable<Kurs>

@{
    ViewData["Title"] = "Kurslarımız";
}

<!-- Modern Hero Section -->
<div class="hero-section" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); padding: 100px 0; position: relative; overflow: hidden;">
    <!-- Animated Background Circles -->
    <div class="hero-circles">
        <div class="circle circle-1"></div>
        <div class="circle circle-2"></div>
        <div class="circle circle-3"></div>
    </div>
    
    <div class="container position-relative">
        <div class="row text-center text-white">
            <div class="col-12" data-aos="fade-up">
                <div class="hero-content">
                    <h1 class="display-3 fw-bold mb-4 animate__animated animate__fadeInDown">
                        🎓 Kurslarımız
                    </h1>
                    <p class="lead fs-4 mb-4 animate__animated animate__fadeInUp animate__delay-1s">
                        Profesyonel İngilizce eğitimi için tasarlanmış kapsamlı kurslarımız
                    </p>
                    <div class="hero-stats animate__animated animate__fadeInUp animate__delay-2s">
                        <div class="row justify-content-center">
                            <div class="col-auto">
                                <div class="stat-item">
                                    <div class="stat-number">500+</div>
                                    <div class="stat-label">Mezun Öğrenci</div>
                                </div>
                            </div>
                            <div class="col-auto">
                                <div class="stat-item">
                                    <div class="stat-number">98%</div>
                                    <div class="stat-label">Başarı Oranı</div>
                                </div>
                            </div>
                            <div class="col-auto">
                                <div class="stat-item">
                                    <div class="stat-number">15+</div>
                                    <div class="stat-label">Yıl Deneyim</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

