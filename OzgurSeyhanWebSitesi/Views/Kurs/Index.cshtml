<!-- Custom Styles -->
<style>
    /* Hero Section Styles */
    .hero-circles {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        pointer-events: none;
    }

    .hero-circles .circle {
        position: absolute;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.1);
        animation: float 6s ease-in-out infinite;
    }

    .hero-circles .circle-1 {
        width: 120px;
        height: 120px;
        top: 10%;
        left: 10%;
        animation-delay: 0s;
    }

    .hero-circles .circle-2 {
        width: 80px;
        height: 80px;
        top: 60%;
        right: 15%;
        animation-delay: 2s;
    }

    .hero-circles .circle-3 {
        width: 60px;
        height: 60px;
        bottom: 20%;
        left: 60%;
        animation-delay: 4s;
    }

    /* Course Card Designs */
    .course-card {
        border-radius: 20px;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        transform: translateY(0);
        position: relative;
        overflow: hidden;
    }

    .course-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15) !important;
    }

    .course-header-with-bg {
        border-radius: 20px 20px 0 0;
        position: relative;
        overflow: hidden;
    }

    .course-header-content {
        position: relative;
        z-index: 3;
    }

    /* Green overlay for first course */
    .course-overlay-green {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(40, 167, 69, 0.85), rgba(25, 135, 84, 0.9));
        z-index: 1;
    }

    /* Blue overlay for second course */
    .course-overlay-blue {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(0, 123, 255, 0.85), rgba(102, 16, 242, 0.9));
        z-index: 1;
    }

    .course-description-green,
    .course-description-blue {
        background: rgba(248, 249, 250, 0.8);
        border-radius: 15px;
        padding: 20px;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .feature-list {
        margin-top: 15px;
    }

    .feature-item {
        display: flex;
        align-items: center;
        margin-bottom: 8px;
        padding: 5px 0;
    }

    .feature-item:last-child {
        margin-bottom: 0;
    }

    .course-stats {
        background: rgba(255, 255, 255, 0.7);
        border-radius: 15px;
        padding: 20px;
        border: 1px solid rgba(0, 0, 0, 0.05);
    }

    .stat-item {
        padding: 10px 5px;
    }

    .stat-item i {
        font-size: 1.5rem;
        margin-bottom: 8px;
    }

    .price-section {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-radius: 15px;
        padding: 20px;
        border: 2px solid rgba(0, 123, 255, 0.1);
    }

    .price-main {
        font-size: 2.5rem !important;
        background: linear-gradient(135deg, #007bff, #6610f2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .discount-badge {
        animation: pulse 2s infinite;
    }

    .decorative-circles {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        pointer-events: none;
        z-index: 2;
    }

    .decorative-circles .circle {
        position: absolute;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.1);
        animation: float 6s ease-in-out infinite;
    }

    .decorative-circles .circle-1 {
        width: 80px;
        height: 80px;
        top: 10%;
        right: 10%;
        animation-delay: 0s;
    }

    .decorative-circles .circle-2 {
        width: 50px;
        height: 50px;
        bottom: 20%;
        left: 15%;
        animation-delay: 2s;
    }

    .decorative-circles .circle-3 {
        width: 30px;
        height: 30px;
        top: 60%;
        right: 25%;
        animation-delay: 4s;
    }

    .hover-glow {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(0, 123, 255, 0.05), rgba(102, 16, 242, 0.05));
        opacity: 0;
        transition: opacity 0.3s ease;
        pointer-events: none;
        border-radius: 20px;
    }

    .course-card:hover .hover-glow {
        opacity: 1;
    }

    .course-icon i {
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }

    @@keyframes float {
        0%, 100% { transform: translateY(0px) rotate(0deg); }
        50% { transform: translateY(-20px) rotate(180deg); }
    }

    @@keyframes pulse {
        0% { transform: scale(1); }
        50% { transform: scale(1.05); }
        100% { transform: scale(1); }
    }

    /* Responsive improvements */
    @@media (max-width: 768px) {
        .course-card {
            margin-bottom: 30px;
        }
        
        .course-header-with-bg {
            height: 200px !important;
        }
        
        .price-main {
            font-size: 2rem !important;
        }
    }
</style>

