@model Playlist

@{
    ViewData["Title"] = Model.PlaylistAdi;
}

<!-- Playlist Details Section -->
<section class="details-section py-5" style="background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%); min-height: 100vh;">
    <div class="container">

        <!-- Geri Dön Butonu -->
        <div class="row mb-4">
            <div class="col-12">
                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-2"></i>Ana Sayfaya Dön
                </a>
            </div>
        </div>

        <!-- Playlist Başlık -->
        <div class="row mb-5">
            <div class="col-12 text-center">
                <h1 class="display-4 fw-bold text-primary mb-3">
                    <i class="fas fa-list-ul me-3"></i>@Model.PlaylistAdi
                </h1>
                <p class="lead text-muted">@Model.Aciklama</p>
                <div class="title-underline mx-auto"></div>
            </div>
        </div>

        <!-- Sync Butonu (Admin için) -->
        <div class="row mb-4">
            <div class="col-12 text-center">
                <form asp-action="SyncFromYouTube" asp-controller="Playlist" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="fas fa-sync-alt me-2"></i>
                        YouTube'dan Videoları Senkronize Et
                    </button>
                </form>
            </div>
        </div>

        <!-- Video Listesi -->
        <div class="row g-4">
            @if (Model.Videolar != null && Model.Videolar.Any())
            {
                @foreach (var video in Model.Videolar.OrderBy(v => v.SiraNo))
                {
                    <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="@((Model.Videolar.ToList().IndexOf(video) + 1) * 50)">
                        <div class="video-card shadow-lg border-0 h-100">

                            <!-- Video Thumbnail -->
                            <div class="video-thumbnail position-relative">
                                <img src="@video.ThumbnailUrl"
                                     alt="@video.VideoBaslik"
                                     class="w-100"
                                     onerror="this.src='https://via.placeholder.com/400x225?text=Video'">

                                <!-- Play Button Overlay -->
                                <div class="play-overlay">
                                    <i class="fas fa-play-circle fa-4x text-white"></i>
                                </div>

                                <!-- Video Sıra Numarası -->
                                <div class="video-number">
                                    #@(video.SiraNo + 1)
                                </div>
                            </div>

                            <!-- Video Info -->
                            <div class="card-body p-4">
                                <h5 class="card-title fw-bold text-dark mb-3">
                                    @video.VideoBaslik
                                </h5>

                                <p class="card-text text-muted small">
                                    @(video.Aciklama.Length > 100 ? video.Aciklama.Substring(0, 100) + "..." : video.Aciklama)
                                </p>

                                <!-- İzle Butonu -->
                                <div class="text-center mt-3">
                                    <a href="@Url.Action("VideoPlayer", "Playlist", new { id = video.Id })"
                                       class="btn btn-primary w-100">
                                        <i class="fas fa-play me-2"></i>
                                        İzle
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center">
                    <div class="empty-state-box p-5">
                        <i class="fas fa-video-slash fa-5x text-muted mb-3"></i>
                        <h4 class="text-muted">Bu playlist'te henüz video yok</h4>
                        <p class="lead text-muted">Yukarıdaki "Senkronize Et" butonuna tıklayarak videoları yükleyin</p>
                    </div>
                </div>
            }
        </div>

    </div>
</section>

<!-- TempData Mesajları -->
@if (TempData["Success"] != null)
{
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div class="toast show" role="alert">
            <div class="toast-header bg-success text-white">
                <strong class="me-auto">Başarılı</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body">
                @TempData["Success"]
            </div>
        </div>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div class="toast show" role="alert">
            <div class="toast-header bg-danger text-white">
                <strong class="me-auto">Hata</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body">
                @TempData["Error"]
            </div>
        </div>
    </div>
}

<!-- Özel CSS -->
<style>
    .title-underline {
        width: 100px;
        height: 3px;
        background: linear-gradient(90deg, #007bff, #0056b3);
        margin-top: 10px;
    }

    /* Video Card */
    .video-card {
        border-radius: 15px;
        overflow: hidden;
        transition: all 0.3s ease;
        background: white;
    }

        .video-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 40px rgba(0,0,0,0.2) !important;
        }

    /* Video Thumbnail */
    .video-thumbnail {
        height: 200px;
        overflow: hidden;
        position: relative;
    }

        .video-thumbnail img {
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

    .video-card:hover .video-thumbnail img {
        transform: scale(1.1);
    }

    /* Play Overlay */
    .play-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .video-card:hover .play-overlay {
        opacity: 1;
    }

    /* Video Number Badge */
    .video-number {
        position: absolute;
        top: 10px;
        left: 10px;
        background: rgba(0, 0, 0, 0.8);
        color: white;
        padding: 5px 12px;
        border-radius: 15px;
        font-weight: bold;
    }

    /* Empty State */
    .empty-state-box {
        background: white;
        border-radius: 20px;
        border: 2px dashed #dee2e6;
    }
</style>

<!-- AOS Animation -->
<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>
    AOS.init({ duration: 800, once: true });
</script>