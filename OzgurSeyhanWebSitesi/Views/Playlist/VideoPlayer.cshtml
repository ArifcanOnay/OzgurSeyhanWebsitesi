@model Video

@{
    ViewData["Title"] = Model.VideoBaslik;
}

<!-- Video Player Section -->
<section class="video-player-section py-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); min-height: 100vh;">
    <div class="container">

        <!-- Geri Dön Butonu -->
        <div class="row mb-4">
            <div class="col-12">
                <a href="@Url.Action("Details", "Playlist", new { id = Model.PlaylistId })" class="btn btn-light">
                    <i class="fas fa-arrow-left me-2"></i>Playlist'e Geri Dön
                </a>
            </div>
        </div>

        <!-- Video Player Card -->
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow-xl border-0" style="border-radius: 20px; overflow: hidden;">

                    <!-- Video Başlık -->
                    <div class="card-header bg-dark text-white p-4">
                        <h3 class="mb-0 fw-bold">
                            <i class="fas fa-play-circle me-2"></i>
                            @Model.VideoBaslik
                        </h3>
                    </div>

                    <!-- YouTube Player -->
                    <div class="card-body p-0">
                        <div class="ratio ratio-16x9">
                            <iframe src="https://www.youtube.com/embed/@Model.YouTubeVideoId?autoplay=1&rel=0"
                                    title="@Model.VideoBaslik"
                                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                    allowfullscreen>
                            </iframe>
                        </div>
                    </div>

                    <!-- Video Açıklama -->
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-3">
                            <i class="fas fa-info-circle text-primary me-2"></i>
                            Video Açıklaması
                        </h5>
                        <p class="text-muted mb-4" style="white-space: pre-line;">@Model.Aciklama</p>

                        <!-- Video Bilgileri -->
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="info-box p-3 bg-light rounded">
                                    <i class="fas fa-calendar text-primary me-2"></i>
                                    <strong>Yüklenme Tarihi:</strong> @Model.OlusturmaTarihi.ToString("dd MMMM yyyy")
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-box p-3 bg-light rounded">
                                    <i class="fas fa-hashtag text-success me-2"></i>
                                    <strong>Sıra No:</strong> @(Model.SiraNo + 1)
                                </div>
                            </div>
                        </div>

                        <!-- YouTube'da İzle Butonu -->
                        <div class="text-center mt-4">
                            <a href="https://www.youtube.com/watch?v=@Model.YouTubeVideoId"
                               target="_blank"
                               class="btn btn-danger btn-lg">
                                <i class="fab fa-youtube me-2"></i>
                                YouTube'da İzle
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Playlist'teki Diğer Videolar -->
                <div class="card shadow-lg border-0 mt-4" style="border-radius: 20px;">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-3">
                            <i class="fas fa-list text-primary me-2"></i>
                            Bu Playlist'teki Diğer Videolar
                        </h5>
                        <div class="text-center">
                            <a href="@Url.Action("Details", "Playlist", new { id = Model.PlaylistId })"
                               class="btn btn-outline-primary">
                                <i class="fas fa-th-list me-2"></i>
                                Tüm Videoları Gör
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>

<!-- Özel CSS -->
<style>
    .shadow-xl {
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5) !important;
    }

    .info-box {
        transition: all 0.3s ease;
    }

        .info-box:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }    
</style>