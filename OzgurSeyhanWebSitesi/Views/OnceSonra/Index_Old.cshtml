@model IEnumerable<OnceSonra>

@{
    ViewData["Title"] = "Öğrenci Başarı Hikayeleri";
}

<div class="container-fluid py-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="container">
        <div class="row text-center text-white mb-5">
            <div class="col-12">
                <h1 class="display-4 fw-bold mb-3">🌟 Öğrenci Başarı Hikayeleri</h1>
                <p class="lead">Kurslarımıza katılan öğrencilerimizin inanılmaz gelişim hikayeleri</p>
                <p class="mb-0">Siz de bu başarı hikayelerinin bir parçası olabilirsiniz!</p>
            </div>
        </div>

        <!-- Gerçek Öğrenci Hikayeleri -->
        <div class="row g-4">
            
            @foreach(var onceSonra in Model)
            {
                <div class="col-lg-6">
                    <div class="card shadow-lg border-0 h-100">
                        <div class="card-header @(onceSonra.AlinanKurslar.Contains("Başlangıç") ? "bg-success" : "bg-primary") text-white text-center">
                            <h4 class="mb-0">👩‍🎓 @onceSonra.OgrenciAdi</h4>
                            <small>@onceSonra.AlinanKurslar Mezunu</small>
                        </div>
                        <div class="card-body p-4">
                            <div class="row">
                                <!-- ÖNCE -->
                                <div class="col-md-6 border-end">
                                    <div class="text-center mb-3">
                                        <h5 class="text-danger">❌ ÖNCE</h5>
                                        @if(!string.IsNullOrEmpty(onceSonra.OnceVideoUrl))
                                        {
                                            <video class="w-100 rounded" controls style="max-height: 200px;">
                                                <source src="@onceSonra.OnceVideoUrl" type="video/mp4">
                                                Tarayıcınız video desteklemiyor.
                                            </video>
                                        }
                                        else
                                        {
                                            <div class="placeholder-video bg-light p-4 rounded">
                                                <i class="fas fa-video fa-2x text-muted"></i>
                                                <p class="mt-2 mb-0 text-muted">Video yakında eklenecek</p>
                                            </div>
                                        }
                                    </div>
                                    <p class="small text-muted">"@onceSonra.OnceAciklama"</p>
                                </div>
                                
                                <!-- SONRA -->
                                <div class="col-md-6">
                                    <div class="text-center mb-3">
                                        <h5 class="text-success">✅ SONRA</h5>
                                        @if(!string.IsNullOrEmpty(onceSonra.SonraVideoUrl))
                                        {
                                            <video class="w-100 rounded" controls style="max-height: 200px;">
                                                <source src="@onceSonra.SonraVideoUrl" type="video/mp4">
                                                Tarayıcınız video desteklemiyor.
                                            </video>
                                        }
                                        else
                                        {
                                            <div class="placeholder-video bg-light p-4 rounded">
                                                <i class="fas fa-video fa-2x text-muted"></i>
                                                <p class="mt-2 mb-0 text-muted">Video yakında eklenecek</p>
                                            </div>
                                        }
                                    </div>
                                    <p class="small text-success">"@onceSonra.SonraAciklama"</p>
                                </div>
                            </div>
                            
                            <div class="text-center mt-3">
                                <span class="badge @(onceSonra.AlinanKurslar.Contains("Başlangıç") ? "bg-success" : "bg-primary")">@onceSonra.AlinanKurslar</span>
                                <span class="badge bg-secondary">@((DateTime.Now - onceSonra.OlusturmaTarihi).Days / 30) Ay Önce</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
            
            @if(!Model.Any())
            {
                <div class="col-12">
                    <div class="text-center text-white">
                        <h4>🎥 Başarı hikayeleri çok yakında!</h4>
                        <p>Öğrencilerimizin videolarını hazırlıyoruz...</p>
                    </div>
                </div>
            }        <!-- CTA Bölümü -->
        <div class="row mt-5">
            <div class="col-12 text-center">
                <div class="card bg-white shadow-lg border-0">
                    <div class="card-body p-5">
                        <h3 class="mb-3">🚀 Siz de Bu Başarı Hikayelerinin Parçası Olun!</h3>
                        <p class="lead mb-4">Sadece birkaç ay sonra siz de İngilizce konuşuyor olacaksınız!</p>
                        <a href="/Kurs" class="btn btn-success btn-lg me-3">
                            📚 Kurslarımızı İnceleyin
                        </a>
                        <a href="/" class="btn btn-outline-primary btn-lg">
                            🏠 Ana Sayfaya Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
